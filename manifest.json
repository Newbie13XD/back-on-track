{

  "manifest_version": 2,
  "name": "Back on Track",
  "version": "0.1",

  "description": "Helps you stay focused by asking what the hell you are doing.",

  "icons": {
    "48": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Back on Track",
    "default_popup": "popup/menu.html"
  },

  "permissions": [
    "storage"
  ],

  "applications": {
    "gecko": {
      "id": "newbie13xd@gmail.com"
    }
  }

}